<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <io.ghyeok.stickyswitch.widget.StickySwitch
            android:id="@+id/sticky_switch"
            android:layout_width="175dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:ss_animationDuration="400"
            app:ss_iconPadding="10dp"
            app:ss_iconSize="40dp"
            app:ss_leftIcon="@drawable/ic_baseline_add_24"
            app:ss_leftText="@string/give"
            app:ss_rightIcon="@drawable/ic_baseline_remove_24"
            app:ss_rightText="@string/take"
            app:ss_selectedTextSize="17sp"
            app:ss_sliderBackgroundColor="@color/gray"
            app:ss_switchColor="@color/green"
            app:ss_textColor="@color/black"
            app:ss_textSize="14sp"
            app:ss_animationType="curved"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/humanNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:hint="@string/name"
                android:maxLines="1" />

        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/debtSumEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:hint="@string/sum"
                android:maxLines="1"
                android:maxLength="10"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

            <Spinner
                android:id="@+id/debtCurrencySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="8dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/debtCurrencyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="CUR"
                android:textSize="28sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <!--    <EditText-->
        <!--        android:id="@+id/debtCurrencyEditText"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_margin="8dp"-->
        <!--        android:hint="@string/currency"-->
        <!--        />-->

        <TextView
            android:id="@+id/debtDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="date"
            android:textAlignment="center"
            android:textSize="26sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/debtInfoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/comment"
            />

        <Button
            android:id="@+id/setDebtButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set"
            android:layout_margin="8dp" />

    </LinearLayout>





</ScrollView>