<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Debtbook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="collapsLines">
        <item name="android:background">@color/nightCollapsLine</item>
    </style>

    <style name="collapsContentScrim">
        <item name="contentScrim">@color/black</item>
    </style>

    <style name="addNewHumanLines">
        <item name="android:background">@color/nightCollapsLine</item>
    </style>

    <style name="addNewHumanEditText">
        <item name="android:backgroundTint">@color/darkgray</item>
    </style>

    <style name="switchStyle">
        <item name="ss_textColor">@color/white</item>
        <item name="ss_sliderBackgroundColor">@color/nightCollapsLine</item>
    </style>

    <style name="imageViewButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="fabTheme">
        <item name="android:backgroundTint">@color/nightCollapsLine</item>
        <item name="borderWidth">0dp</item>
        <item name="android:tint">@color/white</item>
        <item name="fabCustomSize">70dp</item>
        <item name="maxImageSize">35dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="searchViewStyle">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>